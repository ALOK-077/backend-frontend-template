@page
@model LoginModel

@{
  ViewData["Title"] = "Log in";
}
<div class="align-flex-center">

    <div class="grid-container justify-center">
      <div class="col-md-6 col-xs-12 col-lg-4">
        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>

          <div class="container">
            <div class="title-container">
              <div class="title">
                <label asp-for="Input.Email"></label>
              </div>
            </div>
            <div class="field">
              <div class="inputContainer">
                <input asp-for="Input.Email" class="input" autocomplete="username" aria-required="true"/>

                <span asp-validation-for="Input.Email" class="text-danger"></span>

              </div>
            </div>
          </div>

          <div class="container">
            <div class="title-container">
              <div class="title">
                <label asp-for="Input.Password" class="form-label"></label>
              </div>
            </div>
            <div class="field">
              <div class="inputContainer">
                <input asp-for="Input.Password" class="input" autocomplete="current-password" aria-required="true"/>

                <span asp-validation-for="Input.Password" class="text-danger"></span>
              </div>
            </div>
          </div>
          <div class="container" style="justify-content: space-between">
            <button id="login-submit" type="submit" class="button default-button content-button">Log in</button>
          </div>

          @* <label asp-for="Input.RememberMe" class="form-label"> *@
          @*   <input class="form-check-input" asp-for="Input.RememberMe"/> *@
          @*   @Html.DisplayNameFor(m => m.Input.RememberMe) *@
          @* </label> *@
        </form>

        <div class="social-buttons-container">
          <form id="external-account" asp-controller="OpenIdAuthorization" asp-action="ExternalRedirect" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal social-login-form">
            <button type="submit" class="button default-button content-button" name="provider" value="Google" title="Log in using your Google account">Google</button>
            @* <div> *@
            @*   @foreach (var provider in Model.ExternalLogins) *@
            @*   { *@
            @*     <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button> *@
            @*   } *@
            @* </div> *@
          </form>

        </div>
      </div>

    </div>


</div>

